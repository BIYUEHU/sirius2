{
  "name": "siriusu",
  "description": "sirius addon base on script api",
  "version": "2.0.0",
  "license": "GPL-3.0-or-later",
  "author": "Arimura Sena <biyuehuya@gmail.com>",
  "scripts": {
    "build": "pnpm generate:types && tsup",
    "dev": "nodemon --watch",
    "release": "pnpm generate:types && tsup --define.release true --define.is_client_version true && tsup --define.release true && conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "generate:types": "cd core && cargo test"
  },
  "files": [
    "dist",
    "schema",
    "static",
    "README.md",
    "LICENSE"
  ],
  "homepage": "https://github.com/biyuehu/sirius#readme",
  "bugs": {
    "url": "https://github.com/biyuehu/sirius/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/biyuehu/sirius.git"
  },
  "keywords": [
    "sirius",
    "plugin",
    "server",
    "script",
    "api",
    "addon",
    "minecraft",
    "bedrock",
    "minecraft-bedrock",
    "bds",
    "server"
  ],
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.14.1",
    "@types/shelljs": "^0.8.15",
    "conventional-changelog-cli": "^4.1.0",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.3",
    "shelljs": "^0.8.5",
    "tsup": "^8.1.0",
    "tsx": "^4.16.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=17.0.0"
  },
  "nodemonConfig": {
    "exec": "pnpm build && cargo run",
    "ext": "ts, rs",
    "ignore": [
      "tsup.config.ts",
      "output.ts",
      "tests",
      "*.test.ts"
    ]
  },
  "dependencies": {
    "@minecraft/server": "2.5.0-beta.1.21.131-stable",
    "@minecraft/server-net": "1.0.0-beta.1.21.84-stable",
    "@minecraft/server-ui": "2.1.0-beta.1.21.131-stable"
  },
  "mcBuild": {
    "uuid": [
      "195b699a-5336-4edf-bd84-ec7a7bef779c",
      "7678bd2b-56a3-490c-988d-0ebb41f3cda4"
    ],
    "transform": [
      [
        "sirius.png",
        "pack_icon.png"
      ],
      "LICENSE",
      "README.md"
    ]
  }
}